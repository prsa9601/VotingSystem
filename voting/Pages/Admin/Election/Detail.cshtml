        @@font-face {
            font-family: 'Vazir';
            src: url('https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/Vazir.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
        }

        body {
            background-color: #f0f2f5;
            color: var(--text-primary);
            min-height: 100vh;
            line-height: 1.6;
            display: flex;
            overflow-x: hidden;
        }

        /* سایدبار */
        .sidebar {
            width: 280px;
            background-color: var(--sidebar);
            color: white;
            height: 100vh;
            position: fixed;
            padding: 1.5rem 0;
            transition: all 0.3s ease;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            z-index: 1000;
            right: 0;
            top: 0;
        }

        .sidebar-header {
            padding: 0 1.5rem 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 1rem;
        }

            .sidebar-header h2 {
                display: flex;
                align-items: center;
                font-size: 1.3rem;
            }

                .sidebar-header h2 i {
                    margin-left: 0.5rem;
                    color: var(--accent);
                }

        .sidebar-menu {
            padding: 0 1rem;
        }

        .menu-item {
            margin-bottom: 0.5rem;
        }

            .menu-item a {
                display: flex;
                align-items: center;
                padding: 0.8rem 1rem;
                color: rgba(255,255,255,0.8);
                text-decoration: none;
                border-radius: 5px;
                transition: all 0.3s;
            }

                .menu-item a:hover, .menu-item a.active {
                    background-color: var(--sidebar-hover);
                    color: white;
                }

                .menu-item a i {
                    margin-left: 0.5rem;
                    width: 20px;
                    text-align: center;
                }

        /* محتوای اصلی */
        .main-content {
            flex: 1;
            margin-right: 280px;
            padding: 2rem;
            transition: all 0.3s ease;
        }

        /* هدر */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e0e0e0;
        }

            .header h1 {
                color: var(--primary-dark);
                font-size: 1.8rem;
                display: flex;
                align-items: center;
            }

                .header h1 i {
                    margin-left: 0.5rem;
                    color: var(--primary);
                }

        .user-profile {
            display: flex;
            align-items: center;
        }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
        }

        .user-role {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        /* استایل‌های انتخابات */

        .election-header {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            border-radius: 10px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

            .election-header::before {
                content: "";
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
            }

        .election-title {
            font-size: 2rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .election-meta {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            background: rgba(255,255,255,0.15);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
        }

            .meta-item i {
                margin-left: 0.5rem;
