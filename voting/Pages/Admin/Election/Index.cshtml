    <script>
        async function deleteElection(electionId) {
            if (!confirm("آیا مطمئن هستید که می‌خواهید حذف کنید؟")) return;

            try {
                const response = await fetch(`/Admin/Election/Index?handler=Delete&electionId=${electionId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                if (response.ok) {
                    // موفقیت‌آمیز بود، می‌تونی صفحه رو رفرش کنی یا آیتم رو حذف کنی از DOM
                    location.reload(); // یا removeElementFromDOM(electionId)
                } else {
                    alert("خطا در حذف آیتم");
                }
            } catch (error) {
                console.error("خطا:", error);
                alert("مشکلی در ارتباط با سرور پیش آمد");
            }
        }
    </script>

