    <script>
        // مدیریت رای‌دهندگان
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const overlay = document.getElementById('overlay');
            const addVoterBtn = document.getElementById('addVoterBtn');
            const deleteModal = document.getElementById('deleteModal');
            const closeModalBtns = document.querySelectorAll('.close-modal');
            const confirmDeleteBtn = document.getElementById('confirmDelete');
            const importVotersBtn = document.getElementById('importVotersBtn');
            const deleteButtons = document.querySelectorAll('.delete-btn');
            const activateButtons = document.querySelectorAll('.activate-btn');

            // مدیریت منوی موبایل
            mobileMenuBtn.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });

            overlay.addEventListener('click', function() {
                sidebar.classList.remove('active');
            });

            // بستن منو هنگام کلیک خارج از آن
            document.addEventListener('click', function(event) {
                if (!sidebar.contains(event.target) &&
                    event.target !== mobileMenuBtn &&
                    !mobileMenuBtn.contains(event.target) &&
                    event.target !== overlay) {
                    sidebar.classList.remove('active');
                }
            });

            // افزودن رای‌دهنده جدید
            addVoterBtn.addEventListener('click', function() {
                const fullName = document.getElementById('fullName').value.trim();
                const phoneNumber = document.getElementById('phoneNumber').value.trim();
                const voteCount = document.querySelector('input[type="number"]').value;
                const election = document.getElementById('election').value;

                if (!fullName || !phoneNumber) {
                    alert('لطفا نام کامل و شماره تلفن را وارد کنید');
                    return;
                }

                if (phoneNumber.length !== 10 || isNaN(phoneNumber)) {
                    alert('شماره تلفن باید 10 رقم باشد');
                    return;
                }

                // شبیه‌سازی ارسال داده
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال ذخیره...';
                this.disabled = true;

                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-save"></i> ذخیره رای‌دهنده';
                    this.disabled = false;

                    // نمایش پیام موفقیت
                    alert('رای‌دهنده با موفقیت اضافه شد');

                    // ریست فرم
                    document.getElementById('fullName').value = '';
                    document.getElementById('phoneNumber').value = '';
                    document.querySelector('input[type="number"]').value = '1';
                    document.getElementById('election').value = '1';
                }, 1500);
            });

            // مدیریت مودال حذف
            deleteButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const name = row.cells[1].textContent;
                    const phone = row.cells[2].textContent;

                    document.querySelector('.modal-content p').innerHTML =
                        `آیا مطمئن هستید که می‌خواهید رای‌دهنده <strong>${name}</strong> با شماره <strong>${phone}</strong> را حذف کنید؟ این عمل غیرقابل بازگشت است.`;

                    deleteModal.style.display = 'flex';
                });
            });

            closeModalBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    deleteModal.style.display = 'none';
                });
            });

            confirmDeleteBtn.addEventListener('click', function() {
                // شبیه‌سازی حذف
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال حذف...';
                this.disabled = true;

                setTimeout(() => {
                    this.innerHTML = 'حذف';
                    this.disabled = false;
                    deleteModal.style.display = 'none';
                    alert('رای‌دهنده با موفقیت حذف شد');
                }, 1000);
            });

            // وارد کردن از فایل
            importVotersBtn.addEventListener('click', function() {
                alert('این ویژگی در نسخه فعلی فعال نیست');
            });

            // مدیریت وضعیت رای‌دهندگان
            activateButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const statusCell = row.querySelector('.status');

                    // شبیه‌سازی فعال کردن
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

                    setTimeout(() => {
                        statusCell.classList.remove('inactive');
                        statusCell.classList.add('active');
                        statusCell.textContent = 'فعال';
                        this.title = 'غیرفعال کردن';
                        this.innerHTML = '<i class="fas fa-ban"></i>';
                        this.classList.remove('activate-btn');
                    }, 1000);
                });
            });

            // مدیریت غیرفعال کردن رای‌دهندگان
            document.querySelectorAll('.action-btn[title="غیرفعال کردن"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const statusCell = row.querySelector('.status');

                    // شبیه‌سازی غیرفعال کردن
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

                    setTimeout(() => {
                        statusCell.classList.remove('active');
                        statusCell.classList.add('inactive');
                        statusCell.textContent = 'غیرفعال';
                        this.title = 'فعال کردن';
                        this.innerHTML = '<i class="fas fa-check"></i>';
                        this.classList.add('activate-btn');
                    }, 1000);
                });
            });
        });
    </script>
</body>
</html>