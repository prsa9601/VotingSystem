@page
@using voting.Util
@model voting.Pages.Admin.User.ListModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>مدیریت کاربران و آراء - پنل ادمین</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #5e35b1;
            --primary-light: #7e57c2;
            --primary-dark: #4527a0;
            --secondary: #26a69a;
            --accent: #ff7043;
            --light: #f5f5f5;
            --dark: #263238;
            --success: #66bb6a;
            --warning: #ffa726;
            --danger: #ef5350;
            --text-primary: #2d3748;
            --text-secondary: #4a5568;
            --sidebar: #2c3e50;
            --sidebar-hover: #34495e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Vazir', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        @@font-face {
            font-family: 'Vazir';
            src: url('https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/Vazir.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
        }

        body {
            background-color: #f0f2f5;
            color: var(--text-primary);
            min-height: 100vh;
            line-height: 1.6;
            display: flex;
            overflow-x: hidden;
        }

        /* سایدبار */
        .sidebar {
            width: 280px;
            background-color: var(--sidebar);
            color: white;
            height: 100vh;
            position: fixed;
            padding: 1.5rem 0;
            transition: all 0.3s ease;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            z-index: 1000;
            right: 0;
            top: 0;
        }

        .sidebar-header {
            padding: 0 1.5rem 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 1rem;
        }

            .sidebar-header h2 {
                display: flex;
                align-items: center;
                font-size: 1.3rem;
            }

                .sidebar-header h2 i {
                    margin-left: 0.5rem;
                    color: var(--accent);
                }

        .sidebar-menu {
            padding: 0 1rem;
        }

        .menu-item {
            margin-bottom: 0.5rem;
        }

            .menu-item a {
                display: flex;
                align-items: center;
                padding: 0.8rem 1rem;
                color: rgba(255,255,255,0.8);
                text-decoration: none;
                border-radius: 5px;
                transition: all 0.3s;
            }

                .menu-item a:hover, .menu-item a.active {
                    background-color: var(--sidebar-hover);
                    color: white;
                }

                .menu-item a i {
                    margin-left: 0.5rem;
                    width: 20px;
                    text-align: center;
                }

        /* محتوای اصلی */
        .main-content {
            flex: 1;
            margin-right: 280px;
            padding: 2rem;
            transition: all 0.3s ease;
        }

        /* هدر */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e0e0e0;
        }

            .header h1 {
                color: var(--primary-dark);
                font-size: 1.8rem;
                display: flex;
                align-items: center;
            }

                .header h1 i {
                    margin-left: 0.5rem;
                    color: var(--primary);
                }

        .user-profile {
            display: flex;
            align-items: center;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-left: 0.5rem;
            }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
        }

        .user-role {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        /* فیلترها و جستجو */
        .filters {
            background-color: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .filter-group {
            margin-bottom: 0;
        }

            .filter-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: var(--primary-dark);
                font-size: 0.9rem;
            }

        .form-control {
            width: 100%;
            padding: 0.7rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
            background-color: #f8fafc;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary-light);
                box-shadow: 0 0 0 3px rgba(94, 53, 177, 0.1);
                background-color: white;
            }

        .btn {
            padding: 0.7rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
        }

            .btn i {
                margin-left: 0.5rem;
            }

        .btn-primary {
            background-color: var(--primary);
            color: white;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(94,53,177,0.2);
            }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

            .btn-outline:hover {
                background-color: var(--primary);
                color: white;
            }

        /* جدول کاربران */
        .users-table {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            border-bottom: 1px solid #eee;
        }

            .table-header h2 {
                font-size: 1.3rem;
                color: var(--primary-dark);
            }

        .table-actions {
            display: flex;
            gap: 0.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: right;
            border-bottom: 1px solid #eee;
        }

        th {
            background-color: #f8f9fa;
            color: var(--text-secondary);
            font-weight: 600;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
        }

            .user-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .badge {
            display: inline-block;
            padding: 0.3rem 0.6rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .badge-primary {
            background-color: var(--primary-light);
            color: white;
        }

        .badge-success {
            background-color: var(--success);
            color: white;
        }

        .badge-warning {
            background-color: var(--warning);
            color: white;
        }

        .vote-details {
            padding: 0;
        }

        .vote-details-content {
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin: 0.5rem 0;
        }

        .vote-candidate {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            border-bottom: 1px solid #eee;
        }

            .vote-candidate:last-child {
                border-bottom: none;
            }

        .vote-candidate-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
            margin-left: 1rem;
        }

            .vote-candidate-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .vote-time {
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-top: 0.3rem;
        }

        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-secondary);
            margin: 0 0.3rem;
            transition: color 0.3s;
        }

            .action-btn:hover {
                color: var(--primary);
            }

        .expand-btn {
            color: var(--primary);
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.2rem;
        }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 1.5rem;
            gap: 0.5rem;
        }

        .page-item {
            display: inline-block;
        }

        .page-link {
            padding: 0.5rem 0.8rem;
            border-radius: 5px;
            border: 1px solid #e2e8f0;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.3s;
        }

            .page-link:hover {
                background-color: #f1f1f1;
            }

            .page-link.active {
                background-color: var(--primary);
                color: white;
                border-color: var(--primary);
            }

        /* منوی همبرگری برای موبایل */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--primary-dark);
            font-size: 1.5rem;
            cursor: pointer;
            margin-left: 1rem;
            z-index: 1100;
        }

        /* ریسپانسیو */
        @@media (max-width: 1200px) {
            .filters {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(100%);
                width: 300px;
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .main-content {
                margin-right: 0;
                width: 100%;
            }

            .mobile-menu-btn {
                display: block;
            }
        }

        @@media (max-width: 768px) {
            .filters {
                grid-template-columns: 1fr;
            }

            .table-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .table-actions {
                width: 100%;
                flex-wrap: wrap;
            }

                .table-actions .btn {
                    width: 100%;
                    margin-bottom: 0.5rem;
                }

            .users-table {
                overflow-x: auto;
            }

            table {
                min-width: 700px;
            }

            .header {
                flex-wrap: wrap;
            }

                .header h1 {
                    margin-bottom: 1rem;
                }

            .main-content {
                padding: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
            }

            .user-profile {
                margin-top: 1rem;
                width: 100%;
                justify-content: flex-end;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .pagination {
                flex-wrap: wrap;
            }

            .sidebar {
                width: 85%;
            }
        }

        /* Overlay برای زمانی که منو باز است */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .sidebar.active + .overlay {
            display: block;
        }
    </style>
</head>
<body>
    <!-- سایدبار -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-user-shield"></i> پنل مدیریت</h2>
        </div>
        <div class="sidebar-menu">

            <div class="menu-item">
                <a href="/Admin/Election/Index"><i class="fas fa-vote-yea"></i> انتخابات‌ها</a>
            </div>
            <div class="menu-item">
                <a href="/Admin/User/List"><i class="fas fa-vote-yea"></i> کاربران</a>
            </div>


        </div>
    </div>

    <!-- Overlay برای بستن منو -->
    <div class="overlay" id="overlay"></div>

    <!-- محتوای اصلی -->
    <div class="main-content">
        <div class="header">
            <div style="display: flex; align-items: center;">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <h1><i class="fas fa-users"></i> مدیریت کاربران و آراء</h1>
            </div>
            <div class="user-profile">
                <img src="https://randomuser.me/api/portraits/men/41.jpg" alt="مدیر سیستم">
                <div class="user-info">
                    <div class="user-name">محمد مدیر</div>
                    <div class="user-role">مدیر ارشد سیستم</div>
                </div>
            </div>
        </div>

        <!-- فیلترها و جستجو -->
        <form method="get">
            <div class="filters">
                <div class="filter-group">
                    <label for="search"><i class="fas fa-search"></i> جستجو</label>
                    <input asp-for="@Model.filterParam.PhoneNumber" type="text" id="search" class="form-control" placeholder="شماره تلفن">
                </div>



             @*    <div class="filter-group">
                    <label>&nbsp;</label>
                    <button class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-filter"></i> اعمال فیلتر
                    </button>
                </div> *@
            </div>
        </form>

        <!-- جدول کاربران -->
        <div class="users-table">
            <div class="table-header">
                <h2><i class="fas fa-list"></i> لیست کاربران</h2>
                <div class="table-actions">
                    <button class="btn btn-primary"><i class="fas fa-plus"></i> کاربر جدید</button>
                </div>
            </div>

            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>کاربر</th>
                            <th>اطلاعات تماس</th>
                            @*  <th>تعداد حق رای</th>
                            <th>آراء استفاده شده</th> *@
                            <th>تعداد اجازه رای</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- کاربر 1 -->
                        @{
                            int i = 0;
                            foreach (var item in Model.Result.Data)
                            {
                               
                                <tr>
                                    <td>
                                        @(i += 1)
                                  </td>
                                <td>
                                    <div style="display: flex; align-items: center;">
                                        <div class="user-avatar">
                                        </div>
                                        <div style="margin-right: 1rem;">
                                            <div style="font-weight: 600;">@item.FullName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@item.PhoneNumber</div>
                                </td>
                                @*  <td><span class="badge badge-primary">۳ رای</span></td>
                            <td><span class="badge badge-success">۳ رای</span></td> *@
                                <td><span class="badge badge-success">@item.VoteAccessNumber</span></td>

                                <td>
                                    <button onclick="location.href='Admin/User/Edit/@item.PhoneNumber'" class="action-btn" title="ویرایش"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn" title="غیرفعال کردن"><i class="fas fa-ban"></i></button>
                                    <button onclick="deleteUser('@item.Id')" class="action-btn" title="حذف"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                                                }



                    </tbody>
                </table>
            </div>

            <div class="pagination">
                @if (Model.Result.CurrentPage > 1)
                {
                    <div class="page-item">
                        <a asp-page="./List"
                           asp-route-PageId="@(Model.Result.CurrentPage - 1)"
                           asp-route-Take="@Model.filterParam.Take"
                           asp-route-PhoneNumber="@Model.filterParam.PhoneNumber"
                           class="page-link">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                }

                @for (int x = Model.Result.StartPage; x <= Model.Result.EndPage; x++)
                {
                    <div class="page-item">
                        <a asp-page="./List"
                           asp-route-PageId="@x"
                           asp-route-Take="@Model.filterParam.Take"
                           asp-route-PhoneNumber="@Model.filterParam.PhoneNumber"
                           class="page-link @(x == Model.Result.CurrentPage ? "active" : "")">
                            @x
                        </a>
                    </div>
                }

                @if (Model.Result.CurrentPage < Model.Result.PageCount)
                {
                    <div class="page-item">
                        <a asp-page="./List"
                           asp-route-PageId="@(Model.Result.CurrentPage + 1)"
                           asp-route-Take="@Model.filterParam.Take"
                           asp-route-PhoneNumber="@Model.filterParam.PhoneNumber"
                           class="page-link">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()

    <script>
        async function deleteUser(userId) {
            if (!confirm("آیا مطمئن هستید که می‌خواهید حذف کنید؟")) return;

            try {
                const response = await fetch(`/Admin/User/List?handler=Delete&userId=${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                if (response.ok) {
                    // موفقیت‌آمیز بود، می‌تونی صفحه رو رفرش کنی یا آیتم رو حذف کنی از DOM
                    location.reload(); // یا removeElementFromDOM(electionId)
                } else {
                    alert("خطا در حذف آیتم");
                }
            } catch (error) {
                console.error("خطا:", error);
                alert("مشکلی در ارتباط با سرور پیش آمد");
            }
        }
    </script>
    <script>
        // نمایش/پنهان کردن جزئیات رای
        function toggleVoteDetails(id) {
            const details = document.getElementById(`voteDetails${id}`);
            const btn = document.querySelector(`#voteDetails${id}`).previousElementSibling;

            if (details.style.display === 'none') {
                details.style.display = 'block';
                btn.textContent = '-';
            } else {
                details.style.display = 'none';
                btn.textContent = '+';
            }
        }

        // جستجو و فیلترها
        document.getElementById('search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // منوی موبایل
        const sidebar = document.getElementById('sidebar');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const overlay = document.getElementById('overlay');

        mobileMenuBtn.addEventListener('click', function() {
            sidebar.classList.toggle('active');
        });

        overlay.addEventListener('click', function() {
            sidebar.classList.remove('active');
        });

        // بستن منو هنگام کلیک خارج از آن
        document.addEventListener('click', function(event) {
            if (!sidebar.contains(event.target) &&
                event.target !== mobileMenuBtn &&
                !mobileMenuBtn.contains(event.target) &&
                event.target !== overlay) {
                sidebar.classList.remove('active');
            }
        });

        // این تابع می‌تواند برای بارگیری اطلاعات از سرور استفاده شود
        function loadUsersData() {
            console.log('در حال بارگیری اطلاعات کاربران...');
            // در اینجا می‌توانید از fetch برای دریافت اطلاعات از API استفاده کنید
        }

        // بارگیری اطلاعات هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            loadUsersData();
        });
    </script>
</body>
</html>