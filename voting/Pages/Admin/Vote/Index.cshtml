@page "{phoneNumber}"
@model voting.Pages.Admin.Vote.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>رای‌دهی توسط ادمین - سامانه انتخابات آنلاین</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #5e35b1;
            --primary-light: #7e57c2;
            --primary-dark: #4527a0;
            --secondary: #26a69a;
            --accent: #ff7043;
            --light: #f5f5f5;
            --dark: #263238;
            --success: #66bb6a;
            --warning: #ffa726;
            --danger: #ef5350;
            --text-primary: #2d3748;
            --text-secondary: #4a5568;
            --sidebar: #2c3e50;
            --sidebar-hover: #34495e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Vazir', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* font -face {
            font-family: 'Vazir';
            src: url('https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/Vazir.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
        } */

        body {
            background-color: #f0f2f5;
            color: var(--text-primary);
            min-height: 100vh;
            line-height: 1.6;
            display: flex;
        }

        /* سایدبار */
        .sidebar {
            width: 280px;
            background-color: var(--sidebar);
            color: white;
            height: 100vh;
            position: fixed;
            padding: 1.5rem 0;
            transition: all 0.3s;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-header {
            padding: 0 1.5rem 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 1rem;
        }

            .sidebar-header h2 {
                display: flex;
                align-items: center;
                font-size: 1.3rem;
            }

                .sidebar-header h2 i {
                    margin-left: 0.5rem;
                    color: var(--accent);
                }

        .sidebar-menu {
            padding: 0 1rem;
        }

        .menu-item {
            margin-bottom: 0.5rem;
        }

            .menu-item a {
                display: flex;
                align-items: center;
                padding: 0.8rem 1rem;
                color: rgba(255,255,255,0.8);
                text-decoration: none;
                border-radius: 5px;
                transition: all 0.3s;
            }

                .menu-item a:hover, .menu-item a.active {
                    background-color: var(--sidebar-hover);
                    color: white;
                }

                .menu-item a i {
                    margin-left: 0.5rem;
                    width: 20px;
                    text-align: center;
                }

        /* محتوای اصلی */
        .main-content {
            flex: 1;
            margin-right: 280px;
            padding: 2rem;
        }

        /* هدر */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e0e0e0;
        }

            .header h1 {
                color: var(--primary-dark);
                font-size: 1.8rem;
                display: flex;
                align-items: center;
            }

                .header h1 i {
                    margin-left: 0.5rem;
                    color: var(--primary);
                }

        .user-profile {
            display: flex;
            align-items: center;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-left: 0.5rem;
            }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
        }

        .user-role {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        /* فرم رای‌دهی */
        .vote-form {
            background-color: white;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            max-width: 800px;
            margin: 0 auto;
        }

        .form-title {
            font-size: 1.5rem;
            color: var(--primary-dark);
            margin-bottom: 1.5rem;
            text-align: center;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: var(--primary-dark);
            }

        .form-control {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
            background-color: #f8fafc;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary-light);
                box-shadow: 0 0 0 3px rgba(94, 53, 177, 0.1);
                background-color: white;
            }

        .voter-info {
            background-color: #f5f5f5;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .voter-detail {
            display: flex;
            margin-bottom: 0.5rem;
        }

        .voter-detail-label {
            font-weight: 600;
            width: 120px;
            color: var(--text-secondary);
        }

        .voter-detail-value {
            flex: 1;
        }

        .remaining-votes {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 1rem;
            display: block;
        }

        /* کاندیداها */
        .candidates-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .candidate-item {
            background-color: white;
            border-radius: 8px;
            padding: 1rem;
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s;
            border: 1px solid #e2e8f0;
            position: relative;
        }

            .candidate-item:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.08);
                border-color: var(--primary-light);
            }

            .candidate-item.selected {
                border-color: var(--primary);
                background-color: #f3e5f5;
                box-shadow: 0 5px 15px rgba(94,53,177,0.1);
            }

        .candidate-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #e2e8f0;
            margin-left: 1rem;
            overflow: hidden;
            border: 3px solid white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .candidate-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .candidate-info {
            flex: 1;
        }

        .candidate-name {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .candidate-party {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        /* دکمه‌ها */
        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
        }

            .btn i {
                margin-left: 0.5rem;
            }

        .btn-primary {
            background-color: var(--primary);
            color: white;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(94,53,177,0.2);
            }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

            .btn-outline:hover {
                background-color: var(--primary);
                color: white;
            }

        /* پیام‌ها */
        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #c8e6c9;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }

        /* ریسپانسیو */
        /* media (max-width: 768px) {
            .sidebar

        {
            width: 250px;
            margin-right: -250px;
        }

        .sidebar.active {
            margin-right: 0;
        }

        .main-content {
            margin-right: 0;
            width: 100%;
            padding: 1.5rem;
        }

        .candidates-list {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column;
            gap: 1rem;
        }

        .btn {
            width: 100%;
        }

        } */
    </style>
</head>
<body>
    <!-- سایدبار -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-user-shield"></i> پنل مدیریت</h2>
        </div>
        <div class="sidebar-menu">

            <div class="menu-item">
                <a href="/Admin/Election/Index"><i class="fas fa-vote-yea"></i> انتخابات‌ها</a>
            </div>
            <div class="menu-item">
                <a href="/Admin/User/Index"><i class="fas fa-vote-yea"></i> کاربران</a>
            </div>


        </div>
    </div>
    <!-- محتوای اصلی -->
    <div class="main-content">
        <div class="header">
            <h1><i class="fas fa-user-edit"></i> رای‌دهی توسط ادمین</h1>
            <div class="user-profile">
                @* <img src="https://randomuser.me/api/portraits/men/41.jpg" alt="مدیر سیستم"> *@
                <div class="user-info">
                    <div class="user-name">محمد مدیر</div>
                    <div class="user-role">مدیر ارشد سیستم</div>
                </div>
            </div>
        </div>

        <!-- فرم رای‌دهی -->
        <div class="vote-form">
            <h2 class="form-title"><i class="fas fa-vote-yea"></i> ثبت رای برای کاربر</h2>

            <div class="alert alert-success" id="successAlert">
                <i class="fas fa-check-circle"></i> رای با موفقیت ثبت شد.
            </div>

            <div class="alert alert-danger" id="errorAlert">
                <i class="fas fa-exclamation-circle"></i> <span id="errorMessage"></span>
            </div>

            <div class="form-group">
                <label for="voterSearch"><i class="fas fa-search"></i> جستجوی رای‌دهنده:</label>
                <div class="input-group">
                    <input type="text" id="voterSearch" class="form-control" placeholder="شماره تلفن یا نام رای‌دهنده">
                    <button class="btn btn-primary" id="searchBtn" style="margin-top: 0.5rem;">
                        <i class="fas fa-search"></i> جستجو
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label for="election">انتخابات مربوطه:</label>
                <select id="election" class="form-control">
                    <option value="1">انتخابات شورای شهر</option>
                    <option value="2">انتخابات مجلس شورای اسلامی</option>
                    <option value="3">انتخابات انجمن صنفی</option>
                </select>
            </div>

            <div class="voter-info" id="voterInfo" style="display: none;">
                <div class="voter-detail">
                    <div class="voter-detail-label">نام کامل:</div>
                    <div class="voter-detail-value" id="voterName">علی محمدی</div>
                </div>
                <div class="voter-detail">
                    <div class="voter-detail-label">شماره تلفن:</div>
                    <div class="voter-detail-value" id="voterPhone">9123456789</div>
                </div>
                <div class="voter-detail">
                    <div class="voter-detail-label">انتخابات:</div>
                    <div class="voter-detail-value" id="voterElection">انتخابات شورای شهر - دوره چهارم</div>
                </div>
                <div class="voter-detail">
                    <div class="voter-detail-label">تعداد حق رای:</div>
                    <div class="voter-detail-value" id="voterVoteCount">3</div>
                </div>
                <span class="remaining-votes" id="remainingVotes">می‌توانید ۳ رای ثبت کنید</span>
            </div>

            <div class="form-group">
                <label><i class="fas fa-users"></i> کاندیداها:</label>
                <div class="candidates-list" id="candidatesList">
                    <!-- کاندیداها به صورت دینامیک اضافه می‌شوند -->
                </div>
            </div>

         

            <div class="form-actions">
                <button class="btn btn-outline" id="cancelBtn">
                    <i class="fas fa-times"></i> انصراف
                </button>
                <button class="btn btn-primary" id="submitVoteBtn" disabled>
                    <i class="fas fa-paper-plane"></i> ثبت رای
                </button>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const alertType = '@(TempData["AlertType"] ?? "")';
            const alertMessage = '@Html.Raw(TempData["AlertMessage"] ?? "")';

            if (alertType && alertMessage) {
                showAnimatedAlert(alertType, alertMessage);
            }

            function showAnimatedAlert(type, message) {
                const icon = type === 'success' ? 'success' : 'error';
                const title = type === 'success' ? 'موفقیت!' : 'خطا!';
                const background = type === 'success' ?
                    'linear-gradient(135deg, #4CAF50, #66BB6A)' :
                    'linear-gradient(135deg, #F44336, #EF5350)';

                Swal.fire({
                    title: `<strong>${title}</strong>`,
                    html: `<div class="sweet-content">${message}</div>`,
                    icon: icon,
                    confirmButtonText: 'متوجه شدم',
                    showCloseButton: true,
                    background: '#fff',
                    color: '#2d3748',
                    confirmButtonColor: type === 'success' ? '#4CAF50' : '#F44336',
                    iconColor: type === 'success' ? '#4CAF50' : '#F44336',
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    },
                    customClass: {
                        title: 'sweet-title',
                        content: 'sweet-content',
                        confirmButton: 'sweet-confirm',
                        closeButton: 'sweet-close'
                    },
                    buttonsStyling: false,
                    didOpen: () => {
                        const popup = Swal.getPopup();
                        popup.style.borderRadius = '12px';
                        popup.style.boxShadow = '0 10px 30px rgba(0,0,0,0.2)';

                        // افکت پس‌زمینه
                        const backdrop = document.querySelector('.swal2-backdrop');
                        backdrop.style.backgroundColor = 'rgba(0,0,0,0.5)';
                    }
                });
            }
        });
    </script>
    <script>
        // داده‌های نمونه
        const candidates = [
            { id: 1, name: "محمد رضایی", party: "لیست امید", avatar: "https://randomuser.me/api/portraits/men/32.jpg" },
            { id: 2, name: "فاطمه محمدی", party: "ائتلاف اصلاح‌طلبان", avatar: "https://randomuser.me/api/portraits/women/44.jpg" },
            { id: 3, name: "علی کریمی", party: "جبهه پیروان خط امام", avatar: "https://randomuser.me/api/portraits/men/22.jpg" },
            { id: 4, name: "زهرا احمدی", party: "ائتلاف بزرگ", avatar: "https://randomuser.me/api/portraits/women/33.jpg" },
            { id: 5, name: "حسین نجفی", party: "جبهه مردمی", avatar: "https://randomuser.me/api/portraits/men/55.jpg" }
        ];

        // متغیرهای انتخاب شده
        let selectedVoter = null;
        let selectedCandidates = [];
        let maxVotes = 0;
        let remainingVotes = 0;

        // DOM Elements
        const voterSearch = document.getElementById('voterSearch');
        const searchBtn = document.getElementById('searchBtn');
        const voterInfo = document.getElementById('voterInfo');
        const voterFullFullName = document.getElementById('voterFullFullName');
        const voterPhone = document.getElementById('voterPhone');
        const voterElection = document.getElementById('voterElection');
        const voterVoteCount = document.getElementById('voterVoteCount');
        const remainingVotesSpan = document.getElementById('remainingVotes');
        const candidatesList = document.getElementById('candidatesList');
        const submitVoteBtn = document.getElementById('submitVoteBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const successAlert = document.getElementById('successAlert');
        const errorAlert = document.getElementById('errorAlert');
        const errorMessage = document.getElementById('errorMessage');

        // نمایش کاندیداها
        function renderCandidates() {
            candidatesList.innerHTML = '';
            candidates.forEach(candidate => {
                const candidateItem = document.createElement('div');
                candidateItem.classFullFullName = 'candidate-item';
                candidateItem.innerHTML = `
          
                    <div class="candidate-info">
                        <div class="candidate-name">${candidate.name}</div>
                        <div class="candidate-party">${candidate.party}</div>
                    </div>
                `;

                candidateItem.addEventListener('click', () => {
                    if (!selectedVoter) return;

                    const isSelected = candidateItem.classList.contains('selected');
                    const candidateId = candidate.id;

                    if (isSelected) {
                        candidateItem.classList.remove('selected');
                        selectedCandidates = selectedCandidates.filter(id => id !== candidateId);
                        remainingVotes++;
                    } else {
                        if (remainingVotes > 0) {
                            candidateItem.classList.add('selected');
                            selectedCandidates.push(candidateId);
                            remainingVotes--;
                        } else {
                            alert(`این کاربر فقط ${maxVotes} حق رای دارد`);
                        }
                    }

                    remainingVotesSpan.textContent = `می‌توانید ${remainingVotes} رای ثبت کنید`;
                    checkSubmitButton();
                });

                candidatesList.appendChild(candidateItem);
            });
        }

        // بررسی دکمه ثبت
        function checkSubmitButton() {
            if (selectedVoter && selectedCandidates.length > 0) {
                submitVoteBtn.disabled = false;
            } else {
                submitVoteBtn.disabled = true;
            }
        }

        // جستجوی رای‌دهنده
        searchBtn.addEventListener('click', function() {
            const searchTerm = voterSearch.value.trim();

            if (!searchTerm) {
                errorMessage.textContent = "لطفا شماره تلفن یا نام رای‌دهنده را وارد کنید";
                errorAlert.style.display = 'block';
                return;
            }

            // در واقعیت اینجا درخواست به سرور ارسال می‌شود
            // این فقط یک شبیه‌سازی است
            setTimeout(() => {
                if (searchTerm === '9123456789' || searchTerm.includes('علی')) {
                    selectedVoter = {
                        id: 1,
                        name: "علی محمدی",
                        phone: "9123456789",
                        election: "انتخابات شورای شهر - دوره چهارم",
                        voteCount: 3
                    };

                    maxVotes = selectedVoter.voteCount;
                    remainingVotes = maxVotes;
                    selectedCandidates = [];

                    voterFullFullName.textContent = selectedVoter.name;
                    voterPhone.textContent = selectedVoter.phone;
                    voterElection.textContent = selectedVoter.election;
                    voterVoteCount.textContent = selectedVoter.voteCount;
                    remainingVotesSpan.textContent = `می‌توانید ${remainingVotes} رای ثبت کنید`;

                    voterInfo.style.display = 'block';
                    errorAlert.style.display = 'none';
                    renderCandidates();
                    checkSubmitButton();
                } else {
                    errorMessage.textContent = "رای‌دهنده یافت نشد";
                    errorAlert.style.display = 'block';
                    voterInfo.style.display = 'none';
                    submitVoteBtn.disabled = true;
                }
            }, 500);
        });

        // ثبت رای
        submitVoteBtn.addEventListener('click', function() {
            if (!selectedVoter || selectedCandidates.length === 0) {
                errorMessage.textContent = "لطفا رای‌دهنده و کاندیداها را انتخاب کنید";
                errorAlert.style.display = 'block';
                return;
            }

            // نمایش لودینگ
            submitVoteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال ثبت...';
            submitVoteBtn.disabled = true;

            // شبیه‌سازی ارسال به سرور
            setTimeout(() => {
                successAlert.style.display = 'block';
                errorAlert.style.display = 'none';

                console.log('رای ثبت شد:', {
                    voterId: selectedVoter.id,
                    candidateIds: selectedCandidates,
                    notes: document.getElementById('adminNotes').value,
                    adminId: 1 // ID ادمین
                });

                // ریست فرم
                submitVoteBtn.innerHTML = '<i class="fas fa-paper-plane"></i> ثبت رای';
                voterSearch.value = '';
                voterInfo.style.display = 'none';
                document.getElementById('adminNotes').value = '';
                selectedVoter = null;
                selectedCandidates = [];
                maxVotes = 0;
                remainingVotes = 0;

                // ریست انتخاب کاندیداها
                document.querySelectorAll('.candidate-item').forEach(item => {
                    item.classList.remove('selected');
                });
            }, 1000);
        });

        // انصراف
        cancelBtn.addEventListener('click', function() {
            if (confirm('آیا مطمئن هستید می‌خواهید از رای‌دهی انصراف دهید؟ تمام اطلاعات وارد شده از بین خواهند رفت.')) {
                voterSearch.value = '';
                voterInfo.style.display = 'none';
                document.getElementById('adminNotes').value = '';
                selectedVoter = null;
                selectedCandidates = [];
                maxVotes = 0;
                remainingVotes = 0;
                errorAlert.style.display = 'none';
                successAlert.style.display = 'none';
                submitVoteBtn.disabled = true;

                // ریست انتخاب کاندیداها
                document.querySelectorAll('.candidate-item').forEach(item => {
                    item.classList.remove('selected');
                });
            }
        });

        // مقداردهی اولیه
        renderCandidates();
    </script>
</body>
</html>