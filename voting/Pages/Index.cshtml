<body>
    <!-- هدر -->
    <header class="header">
        <div style="position: absolute; left: 20px; top: 20px;">
            <button class="btn btn-primary" onclick="location.href='/Login'">
                <i class="fas fa-sign-in-alt"></i> ورود به سیستم
            </button>
        </div>
        <div class="header-content">
            <h1><i class="fas fa-vote-yea"></i> سامانه انتخابات آنلاین</h1>
            <p>در انتخابات مختلف شرکت کنید و نظر خود را به سرعت و به سادگی ثبت نمایید</p>
        </div>
    </header>

    <!-- فیلترها -->
    <div class="container">
      

        <!-- انتخابات‌های فعال -->
        <h2 class="section-title">
            <i class="fas fa-bolt"></i> انتخابات‌های فعال
        </h2>

        <div class="elections-grid" id="active-elections">
            <!-- کارت انتخابات فعال 1 -->
            @{
                if (Model.IsActiveElection.Data.Count == 0)
                {
                    <div>انتخاباتی یافت نشد</div>
                }
                foreach (var item in Model.IsActiveElection.Data)
                {
                    <div class="election-card">
                        <div class="election-status status-active">در حال برگزاری</div>
                        <div class="election-image" style="background-image: url('https://images.unsplash.com/photo-1496081081095-d32308dd6206?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
                            <div class="election-overlay">
                                <div class="election-title">@item.Title</div>
                                @*<div class="election-org">شرکت فناوری اطلاعات</div>*@
                            </div>
                        </div>
                        <div class="election-content">
                            <div class="election-meta">
                                <div class="meta-item">
                                    <div class="meta-value">@item.CandidateId.Count</div>
                                    <div class="meta-label">کاندیدا</div>
                                </div>
                                @*<div class="meta-item">
                                    <div class="meta-value">@item.VotesId.Count</div>
                                    <div class="meta-label">رای‌دهنده</div>
                                </div>*@
                                <div class="meta-item">
                                    <div class="meta-value">@item.VotesId.Count</div>
                                    <div class="meta-label">رای</div>
                                </div>
                            </div>

                            <div class="election-dates">
                                <div class="date-item">
                                    <span class="date-label">شروع:</span>
                                    <span>@DateConverter.ConvertToPersianDate(@item.StartTime)</span>
                                </div>
                                <div class="date-item">
                                    <span class="date-label">پایان:</span>
                                    <span>@DateConverter.ConvertToPersianDate(@item.EndTime)</span>
                                </div>
                            </div>

                            <div class="election-actions">
                                <button class="btn btn-primary" onclick="location.href='../VotingForm/@item.Id'">
                                    <i class="fas fa-vote-yea"></i> شرکت در انتخابات
                                </button>
                              
                            </div>
                        </div>
                    </div>
                }
            }


        <!-- انتخابات‌های آینده -->
        <h2 class="section-title" style="margin-top: 3rem;">
            <i class="fas fa-calendar-alt"></i> انتخابات‌های غیرفعال
        </h2>

        <div class="elections-grid" id="upcoming-elections">
            <!-- کارت انتخابات آینده 1 -->
            @{
                if (Model.IsNotActiveElection.Data.Count == 0)
                {
                    <div>انتخاباتی یافت نشد</div>
                }
                foreach (var item in Model.IsNotActiveElection.Data)
                {
                    <div class="election-card">
                        <div class="election-status status-upcoming">غیرفعال</div>
                        <div class="election-image" style="background-image: url('https://images.unsplash.com/photo-1532634922-8fe0b757fb13?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
                            <div class="election-overlay">
                                <div class="election-title">@item.Title</div>
                                @* <div class="election-org">دبیرستان نمونه دولتی</div> *@
                            </div>
                        </div>
                        <div class="election-content">
                            <div class="election-meta">
                                <div class="meta-item">
                                    <div class="meta-value">@item.CandidateId.Count</div>
                                    <div class="meta-label">کاندیدا</div>
                                </div>
                                @*    <div class="meta-item">
                            <div class="meta-value">۰</div>
                            <div class="meta-label">رای‌دهنده</div>
                        </div> *@
                                <div class="meta-item">
                                    <div class="meta-value">@item.VotesId.Count</div>
                                    <div class="meta-label">رای</div>
                                </div>
                            </div>

                            <div class="election-dates">
                                <div class="date-item">
                                    <span class="date-label">شروع:</span>
                                        <span>@DateConverter.ConvertToPersianDate(@item.StartTime)</span>
                                </div>
                                <div class="date-item">
                                    <span class="date-label">پایان:</span>
                                        <span>@DateConverter.ConvertToPersianDate(@item.EndTime)</span>
                                </div>
                            </div>

                            @*<div class="election-actions">
                                <button class="btn btn-outline">
                                    <i class="fas fa-calendar-check"></i> یادآوری
                                </button>
                                <button class="btn btn-outline">
                                    <i class="fas fa-info-circle"></i> جزئیات
                                </button>
                            </div>*@
                        </div>
                    </div>
                }
            }

        </div>

        <!-- انتخابات‌های گذشته -->
       
    </div>

    <!-- پاورقی -->
   

    <script>
        // فیلتر کردن انتخابات
        document.getElementById('status-filter').addEventListener('change', function() {
            const status = this.value;

            document.querySelectorAll('.election-card').forEach(card => {
                card.style.display = 'block';
            });

            if (status === 'active') {
                document.querySelectorAll('#upcoming-elections, #completed-elections').forEach(section => {
                    section.style.display = 'none';
                });
                document.getElementById('active-elections').style.display = 'grid';
            }
            else if (status === 'upcoming') {
                document.querySelectorAll('#active-elections, #completed-elections').forEach(section => {
                    section.style.display = 'none';
                });
                document.getElementById('upcoming-elections').style.display = 'grid';
            }
            else if (status === 'completed') {
                document.querySelectorAll('#active-elections, #upcoming-elections').forEach(section => {
                    section.style.display = 'none';
                });
                document.getElementById('completed-elections').style.display = 'grid';
            }
            else {
                document.querySelectorAll('.elections-grid').forEach(section => {
                    section.style.display = 'grid';
                });
            }
        });

        // جستجوی انتخابات
        document.querySelector('.search-box input').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();

            document.querySelectorAll('.election-card').forEach(card => {
                const title = card.querySelector('.election-title').textContent.toLowerCase();
                const org = card.querySelector('.election-org').textContent.toLowerCase();

                if (title.includes(searchTerm) || org.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // شبیه‌سازی بارگذاری انتخابات
